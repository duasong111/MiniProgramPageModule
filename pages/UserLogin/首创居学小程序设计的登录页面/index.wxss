
/* 去进行整体页面的的布局 */
.t-login {
  width: 85%;
  margin: 0 auto;
  font-size: 28rpx;
  color: #000;
}

.img-b {
  position: absolute;
  width: 50%;
  bottom: 0;
  left: -50rpx;
  z-index: -1;
}


.login_button {
  background: #7e95f5;
  color: #fff;
  height: 90rpx;
  line-height: 58rpx;
  padding: 10rpx;
  border-radius: 50rpx;
  box-shadow: 0 5px 7px 0 rgba(86, 119, 252, 0.2);
}
.wx_button{
  font-size: 50rpx;
  background-color: rgb(204, 204, 111);
}
.t-login input {
  padding: 0 20rpx 0 120rpx;
  height: 90rpx;
  line-height: 90rpx;
  margin-bottom: 50rpx;
  background: #d6e3ec;
  border: 1px solid #e9e9e9;
  font-size: 28rpx;
  border-radius: 50rpx;
}

.t-login .t-a {
  position: relative;
}

.t-login .t-a image {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 40rpx;
  top: 28rpx;
  margin-right: 20rpx;
}
.t-login .t-a .line {
  width: 2rpx;
  height: 40rpx;
  background-color: #dedede;
  position: absolute;
  top: 28rpx;
  left: 98rpx;
}

.t-login .t-b {
  text-align: left;
  font-size: 46rpx;
  color: #000;
  padding: 120rpx 0 30rpx 0;
  font-weight: bold;
}
.t-login .t-b2 {
  text-align: left;
  font-size: 32rpx;
  color: #aaaaaa;
  padding: 0rpx 0 120rpx 0;
}

.t-login .t-c {
  position: absolute;
  right: 22rpx;
  top: 21rpx;
  background: #5677fc;
  color: #fff;
  font-size: 31rpx;
  border-radius: 50rpx;
  height: 63rpx;
  line-height: 59rpx;
  padding: 0 25rpx;
}

.t-login .t-e {
  text-align: center;
  width: 250rpx;
  margin: 80rpx auto 0;
}

.t-login .t-g {
  float: left;
  width: 50%;
}

.t-login .t-f {
  text-align: center;
  margin: 20rpx 0 0 0;
  color: #666;
}

.t-login .t-f text {
  margin-left: 20rpx;
  color: #aaaaaa;
  font-size: 27rpx;
}
.bottomButton {
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
}

.bottomButton l-button:not(:last-child) {
  margin-right: 10%; /* 设置按钮之间的距离 */
}
.registerButton{
  display: flex;
  justify-content: center;
  margin-top: 10rpx;
}
