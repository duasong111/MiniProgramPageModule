  /* 对里边字体的设置 */
  .weui-grid {
    position: relative;
    float: left;
    padding: 20px 10px;
    font-weight: 450;
    width: 25%;
    box-sizing: border-box;
    font-family:Cambria, Cochin, Georgia, Times, ‘Times New Roman’, serif;
  }
  /* 对方框的字进行修饰 */
  .me-about{
    /* background-color: gold; */
    font-size: 30rpx;
    font-weight: 400;
    margin-left: 40rpx;
}
/* 对图片的重新修饰 */
.weui-grid  .me-about .imageList{
    width: 50rpx;
    height: 50rpx;
    box-shadow: none;
    border: radius 0; 
  }
  .weui-grid:before {
    content: " ";
    position: absolute;
    right: 0;
    top: 0;
    bottom: 0;
    border-right: 1px solid #D9D9D9;
    
  }
  .weui-grid:after {
    content: " ";
    position: absolute;
    left: 0;
    bottom: 0;
    right: 0;
    border-bottom: 1px solid #D9D9D9;
    color: #D9D9D9;
    -webkit-transform-origin: 0 100%;
            transform-origin: 0 100%;
    -webkit-transform: scaleY(0.5);
            transform: scaleY(0.5);
  }

